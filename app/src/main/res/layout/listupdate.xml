<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:layout="http://schemas.android.com/apk/res-auto"

    tools:context="manan.mynotes.listentry">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_alignParentBottom="true"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Heading:"
            android:id="@+id/head1"
            android:textSize="22sp"
            android:paddingBottom="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/heading1"
            android:layout_below="@+id/head1"

            android:hint=" Enter The Heading:"

            android:background="#c3e9e9"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Content:"
            android:id="@+id/cont1"
            android:textSize="22sp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/heading1"
            android:layout_alignParentLeft="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/content1"
            android:layout_below="@+id/cont1"
            android:layout_alignParentStart="true"
            android:background="#c3e9e9"
            android:autoText="false"
            android:hint=" Enter The Content:"
            android:gravity="top"
            android:layout_alignParentLeft="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="submit"
            android:id="@+id/submit1"
            android:layout_marginTop="41dp"
            android:layout_below="@+id/content1"
            android:layout_alignEnd="@+id/content1"
            android:layout_alignRight="@+id/content1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/back1"
            android:onClick="back"
            android:layout_alignTop="@+id/submit1"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="delete"
            android:id="@+id/delete"
            android:layout_alignTop="@+id/back1"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>
    </ScrollView>


</RelativeLayout>
